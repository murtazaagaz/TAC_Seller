<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/list_layout"
        android:clickable="true"
        android:background="@drawable/background_for_relative"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:id="@+id/image_view_recycle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_recycle"
            android:maxLength="25"
            android:layout_toRightOf="@+id/image_view_recycle"
            android:text="Amina Mehendi"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_recycle"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/image_view_recycle">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:maxLength="70"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.95"
                android:text="Status :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prize_recycle"
                android:maxLength="25"
                android:layout_marginRight="8dp"
                android:text="80rs"
                android:layout_marginTop="8dp"
                android:layout_weight="0.05"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>